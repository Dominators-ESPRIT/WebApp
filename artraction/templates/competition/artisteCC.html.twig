{% extends 'user.html.twig' %}

{% block title %}Competition index{% endblock %}

{% block body %}

    <h1>Competition </h1>


    {% for competition in competitions %}
        <div class="container">
            <div class="row">
                <div class="col-sm-5">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Nom:     {{ competition.nom }}</h4>
                            <h4 class="card-title">Théme:    {{ competition.theme }}</h4>
                            <h4 class="card-title">Date début:    {{ competition.dateDebut ? competition.dateDebut|date('Y-m-d') : '' }}</h4>
                            <h4 class="card-title">Date fin:    {{ competition.dateFin ? competition.dateFin|date('Y-m-d') : '' }}</h4>
                            <h4 class="card-title">Type:    {{ competition.type }}</h4>
                            <a href="{{ path('oeuvreCompetition',{'id': competition.id}) }}" class="btn btn-primary">Consulter</a>

                            <a href="{{ path( 'artisteGOCC',{'id': competition.id}) }}" class="btn btn-primary">Gérer oeuvre</a>
                            <a href="{{ path('oeuvre_competition_new',{'id': competition.id}) }}" class="btn btn-primary">Participer</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}



{% endblock %}
