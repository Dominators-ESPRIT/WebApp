<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Signup</title>
    <link rel="stylesheet" href="{{ asset('signup-style.css') }}">
    <link href="{{ asset('https://fonts.googleapis.com/css?family=Raleway:300,400,700&display=swap') }}" rel="stylesheet">
</head>
<body>
<main>
    <div class="background">
        <div class="text">
            <h1>Signup</h1>
            <p>Have Account? <a href="{{ path('login') }}">Login</a></p>
        </div>
        <section id="main-content">
            <section class="wrapper">


                {{ form_start(form ,{'attr': {'class': 'contact_form text-center'}}) }}
                <div>
                    {{ form_widget(form.username , {'attr': {'class': 'form-control' , 'placeholder' : 'username'}} ) }}

                </div>

                <div>
                    {{ form_widget(form.email , {'attr': {'class': 'form-control' , 'placeholder' : 'email'}} ) }}

                </div>
                <div>
                    {{ form_widget(form.password , {'attr': {'class': 'form-control' , 'placeholder' : 'password'}} ) }}

                </div>
                <div>
                    {{ form_widget(form.numero , {'attr': {'class': 'form-control' , 'placeholder' : 'numero'}} ) }}

                </div>
                <div>
                    {{ form_widget(form.age , {'attr': {'class': 'form-control' , 'placeholder' : 'age'}} ) }}

                </div>
                <div>
                    {{ form_widget(form.addresse , {'attr': {'class': 'form-control' , 'placeholder' : 'addresse'}} ) }}

                </div>
                <div>
                    {{ form_widget(form.role , {'attr': {'class': 'form-control' , 'placeholder' : 'role'}} ) }}

                </div>


                <input type="submit" value="login" class="btn-danger"/>

                {{ form_end(form) }}


            </section>
        </section>
    </div>
</main>
</body>
</html>